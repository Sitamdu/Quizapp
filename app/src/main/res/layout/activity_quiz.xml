<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">


        <!--Question 1-->

        <TextView
            style="@style/questionStyle"
            android:text="1.Who became king of Nepal in 2001?"/>

        <RadioGroup
            android:id="@+id/num_one_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/Gynendra_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Gynendra"/>

            <RadioButton
                android:id="@+id/Macchendra_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Macchendra"/>

            <RadioButton
                android:id="@+id/Birendra_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Birendra"/>

            <RadioButton
                android:id="@+id/Dipendra_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dipendra"/>
        </RadioGroup>

        <!--Question 2-->

        <TextView
            style="@style/questionStyle"
            android:text="2.What is capital city of Nepal?"
            />

        <RadioGroup
            android:id="@+id/num_two_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/bhaktapur_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Bhaktapur"/>

            <RadioButton
                android:id="@+id/Kathmandu_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Kathmandu"/>

            <RadioButton
                android:id="@+id/Pokhara_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Pokhara"/>

            <RadioButton
                android:id="@+id/Biratnagar_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Biratnagar"/>
        </RadioGroup>

        <!--Question 3-->

        <TextView
            style="@style/questionStyle"
            android:text="3.Who is the fisrt President of Nepal?"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:hint="Enter your answer"
            android:inputType="text"/>
        <!--Question 4-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.Which is first Bank of Nepal?"
            android:fontFamily="sans-serif"
            android:textColor="@color/accent"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <CheckBox
            android:id="@+id/Rastra_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nepal Rastra Bank"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/Nepal_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nepal Bank ltd."
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/Kist_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kist Bank ltd."
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/Kumari_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kumari Bank ltd."
            android:textSize="16sp"/>


        <!--Question 5-->

        <TextView
            style="@style/questionStyle"
            android:text="5.When was SAARC established?"
            />

        <RadioGroup
            android:id="@+id/num_five_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/one_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="1967"/>

            <RadioButton
                android:id="@+id/three_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="1995"/>

            <RadioButton
                android:id="@+id/six_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="1953"/>

            <RadioButton
                android:id="@+id/seven_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="1985"/>
        </RadioGroup>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="submit"/>

    </LinearLayout>

</ScrollView>